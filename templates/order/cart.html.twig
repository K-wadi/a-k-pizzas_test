{% extends 'base.html.twig' %}

{% block content %}
    <div class="container mt-4">
        <h2>Winkelwagen</h2>
        {% if cart %}
            <table class="table">
                <thead>
                <tr>
                    <th>Pizza</th>
                    <th>Aantal</th>
                    <th>Prijs</th>
                    <th>Actie</th>
                </tr>
                </thead>
                <tbody>
                {% for id, quantity in cart %}
                    <tr>
                        <td>{{ pizzas[id].name }}</td>
                        <td>{{ quantity }}</td>
                        <td>â‚¬{{ (pizzas[id].price * quantity)|number_format(2, ',', '.') }}</td>
                        <td>
                            <a href="{{ path('order_remove', {id: id}) }}" class="btn btn-danger">Verwijderen</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('order_checkout') }}" class="btn btn-success">Afrekenen</a>
        {% else %}
            <p>Je winkelwagen is leeg.</p>
        {% endif %}
    </div>
{% endblock %}
