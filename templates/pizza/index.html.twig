{% extends 'base.html.twig' %}

{% block title %}Pizza Menu{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block content %}
    <div class="container pizza-container py-5">
        <div class="text-center mb-5">
            <h1 class="fw-bold">Onze Pizza's</h1>
            <p class="text-muted">Ontdek onze heerlijke selectie van ambachtelijke pizza's</p>
        </div>

        <div class="row g-4">
            {% for pizza in pizzas %}
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="{{ asset('img/' ~ pizza.image) }}" class="card-img-top rounded-top" alt="{{ pizza.name }}">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-center fw-bold">{{ pizza.name }}</h5>
                            <p class="card-text text-muted text-center">{{ pizza.description }}</p>
                            <div class="mt-auto text-center">
                                <span class="price fw-bold text-primary">â‚¬{{ pizza.price|number_format(2, ',', '.') }}</span>
                                <a href="{{ path('pizza_show', {'id': pizza.id}) }}" class="btn btn-primary btn-sm mt-2">
                                    Meer info <i class="fas fa-arrow-right ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log("Pizza menu loaded successfully");
        });
    </script>
{% endblock %}
