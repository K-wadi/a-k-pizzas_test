{% extends 'base.html.twig' %}

{% block title %}Registreren{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center" style="height: 80vh;">
        <div class="card shadow p-4" style="width: 400px;">
            <h2 class="text-center mb-3">Registreren</h2>

            {{ form_start(registrationForm) }}

            <div class="mb-3">
                {{ form_label(registrationForm.email, 'E-mail') }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(registrationForm.plainPassword, 'Wachtwoord') }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
            </div>

            <button type="submit" class="btn btn-success w-100">Registreren</button>

            {{ form_end(registrationForm) }}

            <div class="mt-3 text-center">
                <small>Heb je al een account? <a href="{{ path('app_login') }}">Log in</a></small>
            </div>
        </div>
    </div>
{% endblock %}
